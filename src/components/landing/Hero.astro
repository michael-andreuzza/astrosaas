        ðŸŽ‰ New: AI-powered product insights now available! <a
          href="#pricing"
          class="inline-flex items-center underline hover:text-white/90"
          >Try it free <span aria-hidden="true">&rarr;</span></a
        >
      </p>
    </div>
  </div>
  */
  }
  <div class="px-8 pt-12 pb-16 mx-auto md:px-12 lg:px-32 max-w-7xl relative">
    <div class="max-w-3xl text-center mx-auto lg:text-balance">
      {
        /* <p class="text-base leading-normal font-bold uppercase text-accent-600">
        ECOMMERCE CUSTOMER INTELLIGENCE
      </p> */
      }
      <div
        class="flex flex-wrap items-center gap-6 justify-center mx-auto mb-10"
      >
        <a
          href="#pricing"
          class="flex items-center justify-center transition-all duration-200 text-white hover:text-white bg-accent-500 hover:bg-accent-600 h-[30px] px-4 text-xs font-medium rounded-full"
        >
          Get Started Free
        </a>
        <a
          href="https://demostore24.uk/product/aquaveil-moisturizer/"
          class="flex items-center justify-center transition-all duration-200 text-base-700 hover:text-base-800 bg-base-200 hover:bg-base-300 h-[30px] px-4 text-xs font-medium rounded-full"
        >
          See Demo
        </a>
      </div>
      <h2
        class="text-2xl leading-tight tracking-tight sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-semibold text-base-900"
      >
        Add an <span
          class="bg-gradient-to-r from-blue-500 via-blue-600 to-blue-800 text-transparent bg-clip-text font-bold"
          >AI Shopping Assistant</span
        > to Every <span
          class="bg-gradient-to-r from-blue-500 via-blue-600 to-blue-800 text-transparent bg-clip-text font-bold"
          >Product Page</span
        >
      </h2>
      <div
        class="h-1 w-24 mx-auto mt-6 rounded-full bg-gradient-to-r from-blue-500/40 via-blue-600/40 to-blue-800/40"
      >
      </div>
      <div
        class="grid grid-cols-1 sm:grid-cols-3 gap-x-8 gap-y-8 mt-[52px] mb-4 max-w-3xl mx-auto"
      >
        {
          featuresList.map(({ title, description, icon: Icon }) => (
            <div class="text-base-500 flex flex-col items-center text-sm">
              <Icon className="w-5 h-5 mb-2 text-accent-600" />
              <strong class="text-base-700 mb-1">{title}</strong>
              {description}
            </div>
          ))
        }
      </div>
    </div>
    <div class="relative w-full mx-auto max-w-7xl items-center py-12 pb-12">
      <img
        alt="ProductGenie AI Assistant"
        class="relative w-full ring-4 ring-base-50 border border-base-200 lg:rounded-2xl object-cover rounded"
        src="/images/demostore.gif"
      />
    </div>
  </div>
</section>
