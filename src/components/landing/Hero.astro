---
import { MessageSquare, BarChart2, Code } from "lucide-react";

const featuresList = [
  {
    title: "AI Chatbot",
    description:
      "Add an AI chatbot to product pages that expertly answers customer questions instantly.",
    icon: MessageSquare,
  },
  {
    title: "Website Integration",
    description:
      "Easy setup that automatically learns from your product descriptions and reviews.",
    icon: Code,
  },
  {
    title: "Analytics Dashboard",
    description:
      "Gain product insights from customer questions and make data-driven decisions.",
    icon: BarChart2,
  },
];
---

<section class="overflow-hidden">
  {
    /* Banner - Commented out for now
  <div class="bg-accent-600">
    <div class="px-8 py-3 mx-auto md:px-12 lg:px-32 max-w-7xl">
